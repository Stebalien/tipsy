{
  "manifest_version": 2,
  "name": "tipsy",
  "version": "0.1.0",
  "description": "A prototype",
  "icons": {
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/logo19.png",
      "38": "img/logo38.png"
    },
    "default_title": "Tipsy",
    "default_popup": "html/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ]
    },
    {
      "matches": [
        "https://accounts.google.com/o/oauth2/approval*"
      ],
      "js": [
        "/oauth2/oauth2_inject.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.dwolla.com/robots.txt*"
      ],
      "js": [
        "/oauth2/oauth2_inject.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "https://accounts.google.com/o/oauth2/token",
    "https://www.googleapis.com/",
    "history",
    "idle"
  ],
  "web_accessible_resources": [
    "js/modules/*",
    "bower_components/**/*"
  ]
}
