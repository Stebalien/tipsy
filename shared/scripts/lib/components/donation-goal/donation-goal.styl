input[type=text]
  padding 10px
  color #FFF
  font-size 24px
  font-weight bold
  transition background linear .1s
  background-color: #74C175;
  border: 2px solid #E0E0E0;
  border-radius: 5px;
  box-shadow: 4px 1px rgba(224, 224, 224, 0.25);
  width calc(100% - 68px)

  &:focus
    outline none
    background rgba(255, 249, 184, 0.65)
    color #5F5F5F
