table
  td:not(:first-child)
    max-width 150px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

> table
  margin-top 14px

  th
    font-size 80%

  td
    text-overflow ellipsis
    white-space nowrap

    .relative
      position relative

    a
      color #333333

      &:hover
        color #6B6B6B

  tr
    cursor pointer

    &.entry-history
      td
        background-color #FFF !important

    &.has-author
      td
        background-color #F0FFF1 !important

      &:hover, &.active
        td
          background-color #DEFCD2 !important

        .favicon
          opacity 1

    &.no-author
      &:hover, &.active
        td
          background-color #FCE6D2 !important

        .favicon
          opacity 1

      td
        background-color #FFF7F0 !important


.favicon
  width 14px
  height 14px
  position relative
  left -7px
  top 1px
  opacity 0.5

  &.missing
    display inline-block
    background url("data:image/png;base64,")
