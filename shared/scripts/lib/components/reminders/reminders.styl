position relative

input[type=range]
  width 100%
  display block
  margin-bottom 20px
  outline none
  cursor pointer
  margin-top 33px
  -webkit-appearance none

  &::-moz-range-track
    padding 10px
    height 26px
    transition background-color linear .1s
    background-color #74C175
    border 2px solid #E0E0E0
    border-radius 5px
    box-shadow 4px 1px rgba(224, 224, 224, 0.25)
    width calc(100% - 8px)
    margin-bottom 8px

  &::-moz-range-thumb
    border 2px solid #D3D3D3
    width 32px
    background #FFF9B8
    margin-top -4px
    height 66px
    border-radius 4px
    position relative
    top -18px
    opacity .85
    box-shadow 1px 1px rgba(224, 224, 224, 0.65)

  &::-webkit-slider-thumb
    -webkit-appearance none
    border 2px solid #D3D3D3
    width 36px
    background #FFF9B8
    margin-top -4px
    height 70px
    border-radius 4px
    position relative
    top -18px
    opacity .85
    box-shadow 1px 1px rgba(224, 224, 224, 0.65)

  &::-webkit-slider-runnable-track
    padding 10px
    height 50px
    transition background-color linear .1s
    background-color #74C175
    border 2px solid #E0E0E0
    border-radius 5px
    box-shadow 4px 1px rgba(224, 224, 224, 0.25)

output
  display block
  width calc(100% - 30px)
  padding 12px
  position relative
  height 20px

  span
    position absolute
    color #E0E0E0

    &.active
      color #5F5F5F

    &:nth-child(1)
      left 15px

    &:nth-child(2)
      left calc(25% - 20px)

    &:nth-child(3)
      left calc(50% - 20px)

    &:nth-child(4)
      left calc(75% - 20px)

    &:nth-child(5)
      right -7px
