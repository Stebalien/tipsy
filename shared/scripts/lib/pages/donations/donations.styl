progress
  width 100%
  border 2px solid #CCC
  background #FFFEE5
  height 32px
  border-radius 8px
  overflow hidden

  &::-moz-progress-bar
    background #B0FFA1

  &::-webkit-progress-bar
    background #FFFEE5

  &::-webkit-progress-value
    background #B0FFA1
    position relative

    &:after
      content ''
      display block
      position absolute
      right 0
      width 2px
      height 100%
      background #CCC
