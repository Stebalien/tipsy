&
  padding-top 40px

.favicon
  width 24px
  height auto
  position absolute
  left -48px
  top -3px
  opacity 0.5

.reset
  cursor pointer
  float right

.author
  cursor pointer

  &.show:before
    content 'Show'

  &.hide:before
    content 'Hide'

.entry-history
  display none

log-table
  table
    td:not(:first-child)
      max-width 150px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

  > table
    margin-top 14px

    th
      font-size 80%

    td
      text-overflow ellipsis
      white-space nowrap

      .relative
        position relative

      a
        color #333333

        &:hover
          color #6B6B6B

    tr
      cursor pointer

      &.has-author
        &:hover, &.active
          td
            background-color #DEFCD2

          .favicon
            opacity 1

        td
          background-color #F0FFF1

      &.no-author
        &:hover, &.active
          td
            background-color #FCE6D2

          .favicon
            opacity 1

        td
          background-color #FFF7F0

input.hide-no-author, input.hide-has-author
  -webkit-appearance none
  -moz-appearance none

  border none
  width 37px
  height 37px
  padding 10px
  float left
  position relative
  cursor pointer
  font-size 20px
  color #EFEFEF
  top -1px

  &.hide-no-author
    background-color #FFF7F0
    left -4px

    &:checked
      border 9px solid #FFF7F0

  &.hide-has-author
    background-color #F0FFF1
    left -6px

    &:checked
      border 9px solid #F0FFF1

  &:checked
    border 9px solid #FFF7F0
    background-color #EFEFEF

    &:after
      top -13px
      bottom 0
      left 0
      right 0
      text-align center


input[type=search]
  padding 10px
  border 1px solid #EFEFEF
  width calc(100% - 100px)
  float right
