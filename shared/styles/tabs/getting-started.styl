.leader
  width 60%
  font-size 17px

form
  input[name='threshold']
    &:before
      content '$'

  input[type=image]
    margin-right 20px

  button[type=submit]
    background #74C175
    border 3px solid #F0F0F0
    outline none
    color #FFF84A
    padding 14px
    border-radius 10px
    font-weight bold

ol
  list-style-type none
  counter-reset li-counter

  li
    position relative
    padding-left 20px
    margin-bottom 60px

    &:before
      position absolute
      top -10px
      left -42px
      width 20px
      content counter(li-counter)
      counter-increment li-counter
      background #74C175
      padding 10px
      text-align center
      border-radius 30px
      color #F5EF95
      font-weight bold
      border 3px solid #F0F0F0
